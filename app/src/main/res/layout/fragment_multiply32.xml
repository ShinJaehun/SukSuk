                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorBackground"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/ans_down_hundred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorBackground"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/ans_down_ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorBackground"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/ans_down_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorBackground"
                android:textSize="32sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorBackground"
                android:textSize="32sp" />

        </LinearLayout>

        <View
            android:id="@+id/ans_line"
            android:layout_width="180dp"
            android:layout_height="3dp"
            android:background="@color/colorBackground"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:textColor="@color/colorBackground">

            <TextView
                android:id="@+id/ans_tenthousand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorBackground"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/ans_thousand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorBackground"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/ans_hundred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorBackground"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/ans_ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorBackground"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/ans_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorBackground"
                android:textSize="32sp" />

        </LinearLayout>
