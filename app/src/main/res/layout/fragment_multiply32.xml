                android:textColor="@color/colorBackground"
                android:textSize="32sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:textColor="@color/colorBackground">


            <TextView
